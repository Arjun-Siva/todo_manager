
 <main class="TodoMain">

        <article>
            <h1 class="TodoTitle">My Todo-List</h1>
            <%= form_with(url: "/todos", method:"post",class: "AddTodo") do %>
               <%= text_field_tag 'todo_text',nil,placeholder:"What's next?",class:'AddTodo-Text' %>
               <%= date_field_tag 'due_date',nil,class:'AddTodo-Date'%>
               <%= button_tag 'Add',type:'submit', class:'AddTodo-button'%>
            <% end %>

            <%= render partial: "todo-section", locals:{
                
            section_title: "Overdue",
            todos: Todo.overdue,
            show_due_date: true,
            hide_completed: true
        
            } %>

           <%= render partial: "todo-section", locals:{
            
            section_title: "Due Today",
            todos: Todo.due_today,
            show_due_date: false,
            hide_completed: false

            
            } %>

            <%= render partial: "todo-section", locals:{
            section_title: "Due Later",
            todos: Todo.due_later,
            show_due_date: true,
            hide_completed: false
            
            } %>
        </article>

    </main>