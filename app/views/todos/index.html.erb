
 <main class="TodoMain">

        <article>
            <h1 class="TodoTitle">My Todo-List</h1>
            <%= form_with(url: "/todos", method:"post",class: "AddTodo") do %>
               <input name="todo_text" class="AddTodo-Text" type="text" placeholder="what's next?">
                <input name="due_date" class="AddTodo-Date" type="date"/>
                <input class="AddTodo-button" type="submit" value="Add">
            <% end %>

            <%= render partial: "todo-section", locals:{
                
            section_title: "Overdue",
            todos: Todo.overdue,
            show_due_date: true,
            hide_completed: true
        
            } %>

           <%= render partial: "todo-section", locals:{
            
            section_title: "Due Today",
            todos: Todo.due_today,
            show_due_date: false,
            hide_completed: false

            
            } %>

            <%= render partial: "todo-section", locals:{
            section_title: "Due Later",
            todos: Todo.due_later,
            show_due_date: true,
            hide_completed: false
            
            } %>
        </article>

    </main>